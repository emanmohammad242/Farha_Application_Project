<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Acticites.Admin.InsertProductActivity"
    android:background="@drawable/insertproductbackground">

    <LinearLayout
        android:layout_width="317dp"
        android:layout_height="71dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.577"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.77">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="142dp"
            android:layout_height="58dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/baloo_bhai"
            android:text="Product Category"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/productCategory_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Product Category"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="323dp"
        android:layout_height="65dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.577"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.658">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="140dp"
            android:layout_height="72dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/baloo_bhai"
            android:text="Product  Image URL"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/imageUrl_txt"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Image URL"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="323dp"
        android:layout_height="58dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.577"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.542">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="140dp"
            android:layout_height="43dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/baloo_bhai"
            android:text="Product Token"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/productToken_txt"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:ems="10"
            android:hint="Product Token"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="323dp"
        android:layout_height="58dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.577"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.428">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="140dp"
            android:layout_height="39dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/baloo_bhai"
            android:text="Product Size"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/productSize_txt"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:hint="Product Size"
            android:inputType="textPersonName" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="323dp"
        android:layout_height="58dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.577"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.33">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="140dp"
            android:layout_height="34dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/baloo_bhai"
            android:text="Product Color"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/productColor_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:ems="10"
            android:hint="Product Color"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="323dp"
        android:layout_height="58dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.577"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.216">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/baloo_bhai"
            android:text="Product Price"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/productPrice_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:hint="Product Price"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="323dp"
        android:layout_height="58dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.577"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.118">

        <TextView
            android:layout_width="140dp"
            android:layout_height="28dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/baloo_bhai"
            android:text="Product Name"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/productName_txt"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:hint="Product Name"
            android:inputType="textPersonName" />

    </LinearLayout>

    <Button
        android:id="@+id/insert_btn"
        android:layout_width="167dp"
        android:layout_height="57dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/baloo_bhai"
        android:onClick="insert_btn_OnClick"
        android:text="@string/submit"
        android:textSize="18sp"
        app:backgroundTint="#D0662E70"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.549"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>