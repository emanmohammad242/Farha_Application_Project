<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_user_dackgruond"
    android:orientation="vertical"
    tools:context=".Acticites.Users.HomeActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:layout_marginTop="150dp"
            android:layout_marginRight="60dp"
            android:backgroundTint="#DDE1C6D1"
            android:gravity="center"
            android:onClick="Invitation"
            android:text="Invitation"
            android:textAlignment="textStart"
            android:textSize="40dp"
            android:textStyle="bold"
            app:backgroundTint="#00FFFFFF"
            tools:ignore="RtlCompat" />

        <Button
            android:layout_width="100dp"
            android:layout_height="101dp"
            android:layout_marginLeft="242dp"
            android:layout_marginTop="155dp"
            android:background="@drawable/icons8_invite_64" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_marginTop="89dp"
            android:layout_marginRight="60dp"
            android:backgroundTint="#DDE1C6D1"
            android:gravity="center"
            android:onClick="wallet"
            android:text="Wallet"
            android:textAlignment="viewStart"
            android:textSize="40dp"
            android:textStyle="bold"
            app:backgroundTint="#C1E6CFD9"
            app:iconTint="#4AFFFFFF"
            tools:ignore="RtlCompat" />
        <Button
            android:layout_width="110dp"
            android:layout_height="113dp"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="91dp"
            android:background="@drawable/icons8_coins_64"
            />
    </RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="200dp"
        android:backgroundTint="#E2431273"
        android:text="Exit"
        android:textSize="25dp"
        android:textStyle="bold"/>

</LinearLayout>